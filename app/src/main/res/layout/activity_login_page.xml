        android:colorControlNormal="@color/material_deep_teal_500"/>-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logid"
        android:inputType="text"
        android:shadowColor="@color/background_floating_material_dark"
        android:autoText="false"
        android:hint="UserName"
        android:layout_below="@+id/logo"
        android:layout_marginTop="51dp"
        android:layout_alignRight="@+id/logo"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:textColorHint="@color/accent_material_light"
        android:textColor="@color/material_deep_teal_500"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/img2"
        android:contentDescription="dum"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Errorid"
        android:layout_alignRight="@+id/logid"
        android:layout_alignEnd="@+id/logid"
        android:layout_below="@+id/logid"
        android:layout_alignLeft="@+id/logid"
        android:layout_alignStart="@+id/logid"
        android:textColor="@color/primary_material_dark"/>


    <ImageButton
        android:src="@drawable/login"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/login"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/logid"
        android:layout_centerHorizontal="true"
        android:background="@color/background_material_dark"/>


</RelativeLayout>
